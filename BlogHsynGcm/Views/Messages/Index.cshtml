@model IEnumerable<BlogHsynGcm.Models.Messages>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table product-overview" id="myTable">
                        <thead>

                            <tr>
                                <th>Ad Soyad</th>
                                <th>Mail Adresi</th>
                                <th>Konu</th>
                                <th>Mesaj</th>
                                <th>Durum</th>
                                <th>İşlemler</th>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var Message in Model)
                            {
                                <tr>
                                    <td>@Message.NameSurname</td>
                                    <td>@Message.Mail</td>
                                    <td>@Message.Subject</td>
                                    <td>@Message.Message</td>
                                    @if (Message.isRead)
                                    {
                                        <td> <span class="label label-success font-weight-100">Okundu</span> </td>
                                    }
                                    else
                                    {
                                        <td> <span class="label label-warning font-weight-100">Okunmadı</span> </td>
                                    }
                                    <td>
                                        <a class="btn btn-info btn-sm" href="/Messages/Details/@Message.Id"><i class="ti-marker-alt"></i>Oku</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>


