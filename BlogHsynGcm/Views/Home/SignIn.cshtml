@model BlogHsynGcm.Models.Users
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

}
<div class="container">

    <div class="heading_s1">
        <h4>Giriş Yap</h4>
    </div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <input type="text" required="" class="form-control" name="Mail" placeholder="Mail Adresi">
        </div>
        <div class="form-group">
            <input class="form-control" required="" type="password" name="Password" placeholder="Şifre">
        </div>
        <div class="login_footer form-group">
            <div class="chek-form">
                <div class="custome-checkbox">
                    <input class="form-check-input" type="checkbox" name="checkbox" id="exampleCheckbox1" value="">
                    <label class="form-check-label" for="exampleCheckbox1"><span>Beni Hatırla</span></label>
                </div>
            </div>
            @*<a href="#">Forgot password?</a>*@
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-block" name="login">Giriş</button>
        </div>
    }

    <div class="form-note text-center">Hesabınız Yoksa Oluşturmak İçin <a href="/Home/SignUp">Buraya Tıklayın</a></div>
</div>