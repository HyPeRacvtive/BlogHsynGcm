@model BlogHsynGcm.Models.Users

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container">
    <div class="heading_s1">
        <h4>Kayıt Ol</h4>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Image)
        <div class="form-group">
            @Html.EditorFor(model => model.NameSurName, new { htmlAttributes = new { @class = "form-control", placeholder = "Ad Soyad" } })
            @Html.ValidationMessageFor(model => model.NameSurName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control", placeholder = "Mail Adresi" } })
            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Parola", type = "Password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-default btn-block" name="register">Kayıt Ol</button>
        </div>

    }
    <div class="form-note text-center">Bir Hesabınız Varsa Giriş Yapmak İçin <a href="/Home/SignIn">Buraya Tıklayın!</a></div>

</div>