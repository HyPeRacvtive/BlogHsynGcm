@model BlogHsynGcm.Models.Writers
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Makale Düzenle</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                <li class="breadcrumb-item active">Hakkımda Sayfası Düzenle</li>
            </ol>
            <button onclick="window.location.href=('/Admin')" type="button" class="btn btn-info d-none d-lg-block m-l-15"><i class="fas fa-chevron-circle-left"></i> Panel'e Dön</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("About", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div style="display:none">
                        <input type="text" name="Password" value="@Model.Password" />
                        <input type="text" name="Mail" value="@Model.Mail" />
                        <input type="text" name="NameSurname" value="@Model.NameSurname" />
                        <input type="text" name="Phone" value="@Model.Phone" />
                        <input type="text" name="ShortAbout" value="@Model.ShortAbout" />
                        <input type="text" name="Address" value="@Model.Address" />
                    </div>

                    <div class="form-body">
                        <h5 class="card-title">Hakkımda Sayfası Düzenle</h5>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Hakkımda Sayfası Banner</label>
                                    <input type="text" name="AboutHeader" value="@Model.AboutHeader" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.AboutHeader, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Resim Ekle</label>
                                    <input type="file" name="Image" value="@Model.Image" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <h5 class="card-title m-t-40">Hakkımda Yazısı</h5>
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div>
                                        <h3><textarea id="summernote" name="About" class="form-control">@Model.About</textarea></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <div class="form-actions m-t-40">
                        <button type="submit" class="btn btn-success"> <i class="ti ti-check"></i> Yayınla</button>
                        <button type="button" onclick="window.location.href='/Admin'" class="btn btn-danger"> <i class="ti ti-control-stop"></i> Vazgeç</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

