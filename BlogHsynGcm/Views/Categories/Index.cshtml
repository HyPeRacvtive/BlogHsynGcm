@model IEnumerable<BlogHsynGcm.Models.Categories>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Kategoriler</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/Index">Anasayfa</a></li>
                <li class="breadcrumb-item active">Kategoriler</li>
            </ol>
            <button onclick="window.location.href='/Categories/Create'" type="button" class="btn btn-info d-none d-lg-block m-l-15"><i class="fa fa-plus-circle"></i> Yeni Oluştur</button>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
    
                <h4 class="card-title">Kategoriler</h4>
                <div class="table-responsive">
                    <table class="table color-table dark-table">
                        <thead>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>Kategori Açıklaması</th>
                                <th>Kategori Renk Kodu</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Cat in Model)
                            {
                                <tr >
                                    <td>@Cat.Name</td>
                                    <td>@Cat.Description</td>
                                    <td  style="background-color:@Cat.Color">@Cat.Color</td>
                                    <td>
                                        <a href="/Categories/Edit/@Cat.Id" class="btn btn-success btn-small" >Düzenle</a> |                                     
                                        <a href="/Categories/Delete/@Cat.Id" class="btn btn-danger btn-small">Sil</a>
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
   

</div>



