@model IEnumerable<BlogHsynGcm.Models.Comments>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table product-overview" id="myTable">
                        <thead>

                            <tr>
                                <th>Blog Başlığı</th>
                                <th>Yorum Yapan Kullanıcı</th>
                                <th>Yorum</th>
                                <th>Yorum Tarihi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var Comment in Model)
                            {
                                <tr>
                                    <td>@Comment.Blog.Header</td>                             
                                    <td>@Comment.User.NameSurName</td>
                                    <td>@Comment.Comment</td>
                                    <td>@Comment.Date</td>
                                    @if (Comment.isActive)
                                    {
                                        <td> <span class="label label-success font-weight-100">Onaylı</span> </td>
                                    }
                                    else
                                    {
                                        <td> <span class="label label-warning font-weight-100">Onay Bekliyor</span> </td>
                                    }
                           

                                <td>
                                    <a class="btn btn-info btn-sm" href="/Comments/Details/@Comment.Id"><i class="ti-marker-alt"></i>Oku</a>|
                                    @if (!Comment.isActive)
                                    {
                                        <a class="btn btn-success btn-sm" href="/Comments/CommentConfirm/@Comment.Id">Onayla</a>

                                    }
                                    else
                                    {
                                        <a class="btn btn-warning btn-sm" href="/Comments/CommentUnConfirm/@Comment.Id">Onayı Kaldır</a>

                                    }
                                </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>

