@model IEnumerable<BlogHsynGcm.Models.Messages>

<a class="nav-link dropdown-toggle waves-effect waves-dark" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="ti-email"></i>
    @if (Model.Any(x => x.isRead!=true) )
    {
        <div class="notify"> <span class="heartbit"></span> <span class="point"></span> </div>

    }
</a>

<div class="dropdown-menu dropdown-menu-right mailbox animated bounceInDown">
    <ul>
        <li>
            <div class="drop-title">Mesajlar</div>
        </li>
        <li>
            <div class="message-center">

                @foreach (var Messages in Model)
                {


                    if (Messages.isRead == true)
                    {
                        <a href="/Messages/Details/@Messages.Id">
                            <div class="btn btn-success btn-circle"><i class="far fa-envelope-open"></i></div>
                            <div class="mail-contnet">
                                <h5>@Messages.NameSurname</h5> <span class="mail-desc">@Messages.Subject</span> <span class="time">@Messages.Date</span>
                            </div>
                        </a>
                    }
                    else
                    {
                        <a href="/Messages/Details/@Messages.Id">
                            <div class="btn btn-danger btn-circle"><i class="far fa-envelope"></i></div>
                            <div class="mail-contnet">
                                <h5>@Messages.NameSurname</h5> <span class="mail-desc">@Messages.Subject</span> <span class="time">@Messages.Date</span>
                            </div>
                        </a>
                    }





                }




            </div>
        </li>
        <li>
            <a class="nav-link text-center link" href="/Messages"> <strong>Tüm Mesajları Göster</strong> <i class="fa fa-angle-right"></i> </a>
        </li>
    </ul>
</div>
